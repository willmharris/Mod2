<div class="dm_pages">
<h1> Create a new Dungeon Master </h1>

<%= render partial: "shared/error_list", locals: {new_object: @dm}  %>

<%= form_for @dm, controller: 'dms', action: 'create' do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <br>
    <%= f.label :password %>
    <%= f.password_field :password %>
    <br>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
    <br>
    <%= f.label :email %>
    <%= f.text_field :email %>
    <br>
    <%= f.submit "create" %>
  <% end %>
</div>